<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#d4d4d4"/>

    <ImageView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_settings"
        android:layout_alignParentRight="true"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"/>

    <TextView
        android:id="@+id/profile_name"
        android:layout_below="@id/profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/half_standard_margin"
        android:textSize="8pt"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/profile_location"
        android:layout_below="@id/profile_name"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:layout_marginTop="@dimen/quarter_standard_margin"/>

    <TextView
        android:layout_below="@id/profile_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/double_standard_margin"
        android:layout_marginLeft="@dimen/standard_margin"
        android:layout_marginRight="@dimen/standard_margin"
        android:textAlignment="center"
        android:textSize="8pt"
        android:text="College student from Seattle looking to adopt a dog, or ten."/>

    <Button
        android:id="@+id/log_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/double_standard_margin"
        android:layout_marginRight="@dimen/double_standard_margin"
        android:layout_marginBottom="@dimen/standard_margin"
        android:layout_alignParentBottom="true"
        android:text="log out"
        android:textColor="?colorPrimaryDark"/>

    <Button
        android:id="@+id/sync_myo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/double_standard_margin"
        android:layout_marginRight="@dimen/double_standard_margin"
        android:layout_marginBottom="@dimen/standard_margin"
        android:text="Sync Myo"
        android:layout_above="@id/log_out"
        android:textColor="?colorPrimaryDark"/>

</RelativeLayout>