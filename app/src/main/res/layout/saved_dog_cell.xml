<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:padding="@dimen/half_standard_margin">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/saved_dog_image"
        android:layout_width="64dp"
        android:layout_height="64dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/saved_dog_image"
        android:layout_marginLeft="@dimen/half_standard_margin">

        <TextView
            android:id="@+id/saved_dog_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="7pt"/>

        <TextView
            android:id="@+id/saved_dog_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>